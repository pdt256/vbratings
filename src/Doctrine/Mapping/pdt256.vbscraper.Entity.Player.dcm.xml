<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="pdt256\vbscraper\Entity\Player"
            repository-class="pdt256\vbscraper\EntityRepository\PlayerRepository">

        <lifecycle-callbacks>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <field name="vbId" type="integer" unique="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="name" type="string" length="128" nullable="true"/>

        <field name="created" type="integer">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <field name="updated" type="integer" nullable="true">
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <many-to-many field="teams" target-entity="Team" fetch="EXTRA_LAZY"/>

    </entity>

</doctrine-mapping>
